{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { "*": ["types/*"] },
    "module": "commonjs",
    "target": "es2017",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./lib"
  },
  "compileOnSave": false,
  "filesGlob": [
    "./lib/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "atom": {
    "rewriteTsconfig": true
  },
  "files": [
    "./lib/index.ts",
    "./lib/routes.ts",
    "./lib/test/services/raceService.test.ts",
  ]
}
